<style>
	* {
		font-family: "Arial";
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}

	body {
		background-color: #242424;
		margin: 20px;
	}

	h1 {
		margin-bottom: 20px;
	}

	.warning {
		color: #BE375F;
		font-size: 20px;
		font-weight: bold;
	}

	.success {
		color: #A2D5AB;
		font-size: 20px;
		font-weight: bold;
	}

	.container {
		padding: 20px;
		margin: 20px;
		background-color: #88ADE0;
		border-radius: 10px;
		display: flex;
		flex-direction: column;
		width: 750px;
	}

	.container-header {
		display: flex;
		flex-direction: row;
		justify-content: space-between;
		width: 100%;
		font-size: 1.4rem;
		margin-bottom: 10px;
	}

	.container-header #total-posts {
		align-self: flex-end;
	}

	.post-block {
		display: flex;
		flex-direction: column;
		width: 700px;
		background-color: #1F9CE4;
		padding: 10px;
		margin: 10px;
	}

	.post-block:hover {
		background-color: #57ACDE;
		box-shadow: 5px 5px #8FDDE5
	}

	.inner-post-block {
		margin: 20px 20px;
		background-color: rgba(136,244,255,0.5);
		padding: 20px;
		border-radius: 10px;
	}

