	}

	.post-block small {
		text-align: right;
		color: white;
	}

</style>

<h1 style="color:white">Welcome to /user/read</h1>

<% if !@user_id_ok %>
	<p class="warning"> The User_id doesn't exist or missing!!!</p>
<% else %>
	<h3 class="success"> System has successfully read posts! </h3>
	<div class="container">
		<div class=container-header>
			<h4> <%= @user.name %>'s posts!</h4>
			<div id="total-posts"> Total Post: <%= @user_posts.length %></div>
		</div>
		<% if @user_posts.length != 0 %>
			<% @user_posts.reverse().each do |post| %>
				<div class="post-block">
					<div class="inner-post-block">
						<p> <%= post.msg %> </p>
					</div>
					<small>at: <%= post.created_at.to_s %></small>
				</div>
			<% end %>
		<% end %>
	</div>
	</div>
<% end %>

